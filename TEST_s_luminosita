int lumiPin = A0;
int valFotor = 0;
int greenLed = 1;
int sblip = 100;
int mblip = 500;
int lblip = 1000;
int mntblip = 60000;

void setup() {
  /*pinMode(luminositÃ ,*/
  Serial.begin(9600); // per test
  pinMode(greenLed, OUTPUT);
  pinMode(lumiPin, INPUT);
}

void loop() {
   digitalWrite(greenLed, HIGH);
   delay(mblip);
   digitalWrite(greenLed, LOW);
   delay(mblip);
   lumiVal = analogRead(lumiPin);
   Serial.print("sensor =");
   Serial.print(lumiVal);
   delay(mntblip);
}
